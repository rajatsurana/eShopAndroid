<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.rishab.esubzi.SignUp"
    android:orientation="vertical"
    android:background="#389014">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bag1"
        android:layout_margin="30dp"/>

    <TextView android:text="@string/esubzi" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="40dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/username"
        android:background="@drawable/roundness"
        android:layout_margin="20dp"
        android:hint="Username"
        android:focusableInTouchMode="true"
        android:paddingLeft="15dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/roundness"
        android:layout_margin="20dp"
        android:hint="Password"
        android:id="@+id/password"
        android:paddingLeft="15dp"
        android:inputType="textPassword" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/roundness"
                android:layout_margin="20dp"
                android:hint="Address"
                android:id="@+id/address"
                android:paddingLeft="15dp"
                android:inputType="text" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/roundness"
                android:layout_margin="20dp"
                android:hint="Contact Number"
                android:id="@+id/phoneNumber"
                android:paddingLeft="15dp"
                android:inputType="number" />

    <Spinner
        android:id="@+id/type"
        android:layout_width="181dp"
        android:layout_height="63dp"
        android:background="@android:drawable/btn_dropdown"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SignUp"
        android:textColor="#fff"
        android:textSize="30dp"
        android:onClick="signup"
        android:background="#389014"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
