<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="android:background">#46B419</item>-->
        <item name="android:actionBarStyle">@style/MyTheme.ActionBarStyle</item>
        <item name="colorPrimary">#389014</item>
        <item name="colorPrimaryDark">#389014</item>
    </style>
    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="MyTheme.ActionBarStyle" parent="Base.Theme.AppCompat.Light.DarkActionBar">

        <item name="android:background">#46B419</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowNoTitle">false</item>

    </style>


    <!--This is theme for the edittext view-->
    <style name="EditTextTheme">
        <!-- Used for the bottom line when not selected / focused -->
        <item name="colorControlNormal">#46B419</item>
        <!-- colorControlActivated & colorControlHighlight use the colorAccent color by default -->
    </style>
    <style name="AppCompatTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
    </style>
    <style name="DialogTheme" parent="android:Theme.DeviceDefault.Dialog.MinWidth">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorPrimary">@android:color/holo_red_dark</item>
        <item name="android:textColorSecondary">@android:color/holo_red_dark</item>
        <item name="colorControlActivated">@android:color/holo_red_dark</item>



    </style>
</resources>
